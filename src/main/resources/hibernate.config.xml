<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <!-- JDBC Connection Properties -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_student</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">root</property>

        <!-- Hibernate Settings-->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>    <!-- to see sql query-->

        <property name="hbm2ddl.auto">update</property>  <!-- To automatic creation of table-->
        <property name="hibernate.format_sql">true</property>


        <mapping class="org.entity.Student1"/>
        <mapping class="org.onetoone.Question"/>
        <mapping class="org.onetoone.Answer"/>
        <mapping class="org.onetomany.Student"/>
        <mapping class="org.onetomany.Course"/>
        <mapping class="org.manytomany.Emp"/>
        <mapping class="org.manytomany.Project"/>

    </session-factory>
</hibernate-configuration>